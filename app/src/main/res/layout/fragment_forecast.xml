            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatus7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunny"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTemp7"
                android:layout_width="wrap_content"
