                android:id="@+id/tvStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rainy"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTemp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24C - 30C"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
